
@page "/ratelist"

@using System.Collections.Generic
@inject NavigationManager Navigation
@inject BillService BillService

<div style="border-left:1px solid black; padding:2vw; width: 25vw;">
    <h3 style=" display: flex;align-items:center; justify-content:center; padding-bottom:2vh;font-weight:bold;-webkit-text-stroke:1px black ; color:darkgreen;">Rate List</h3>
<hr />

<ul>
    @foreach (var item in RateItems)
    {
        <li style=" display:flex; align-items:center; justify-content:space-between;">
            @item.Name - @item.Price
                <button style=" margin-top:10px;" class="btn  btn-outline-success" @onclick="() => AddToBill(item)">Add</button>
        </li>
    }
</ul>
</div>
@code {
    // Predefined list of items
    public List<RateItem> RateItems { get; set; } = new List<RateItem>
    {
       new RateItem { Name = "Haircut - Short", Price = 200 ,ImageUrl = "/images/haircut_short.jpg "},
new RateItem { Name = "Haircut - Long", Price = 300  },
new RateItem { Name = "Shave", Price = 150 },
new RateItem { Name = "Beard Trim", Price = 100 },
new RateItem { Name = "Hair Coloring", Price = 500 },
new RateItem { Name = "Hair Styling", Price = 250 },
new RateItem { Name = "Facial", Price = 400 },
new RateItem { Name = "Manicure", Price = 350 },
new RateItem { Name = "Pedicure", Price = 400 },
new RateItem { Name = "Head Massage", Price = 200 },
new RateItem { Name = "Back Massage", Price = 300 },

};

    private void AddToBill(RateItem item)
    {
        BillService.AddItem(item);
    }

    public class RateItem
    {
        public string Name { get; set; } = string.Empty;
        public decimal Price { get; set; }
        public string ImageUrl { get; set; } = string.Empty;
    }
}